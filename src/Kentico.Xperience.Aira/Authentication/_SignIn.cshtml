@using Kentico.Xperience.Aira
@using Kentico.Xperience.Aira.Authentication
@model SignInViewModel

<form asp-route="@Context.Request.Query["Route"]" method="post" id="signInForm" test-id="signIn">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger validation-summary"></div>

        <div class="form-group">
            <label asp-for="UserNameOrEmail" class="control-label"></label>
            <div class="editing-form-value-cell">
                <input asp-for="UserNameOrEmail" class="form-control" test-id="userNameOrEmail">
                <span asp-validation-for="UserNameOrEmail" class="field-validation-error"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="control-label"></label>
            <div class="editing-form-value-cell">
                <input asp-for="Password" class="form-control" test-id="password">
                <span asp-validation-for="Password" class="field-validation-error"></span>
            </div>
        </div>
        <button id="signIn" type="submit" class="btn btn--primary">Sign in</button>
    </div>
</form>

<script>
    if (!window.htmx) {
        var script = document.createElement('script');
        script.src="https://unpkg.com/htmx.org@2.0.3/dist/htmx.js"
        document.head.appendChild(script);
    }
</script>