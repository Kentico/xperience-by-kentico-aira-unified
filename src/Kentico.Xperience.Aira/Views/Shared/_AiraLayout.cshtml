@using CMS.DataEngine;
@using Kentico.Xperience.Aira;
@using Kentico.Activities.Web.Mvc;

@{
    var baseUrl = Context.Request.GetBaseUrl();
}
<!DOCTYPE html>

<html>
<head id="head">
    <meta content="width=device-width, initial-scale=1" name="viewport">
    <meta charset="UTF-8">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="@baseUrl/_content/Kentico.Xperience.Aira/css/variables.css" rel="stylesheet" type="text/css">
    <link href="@baseUrl/_content/Kentico.Xperience.Aira/css/assets.css" rel="stylesheet" type="text/css">

    <vc:html-header/>
</head>
<body>
    <div class="page-wrapper">
        <div class="content-wrapper">
            <section class="c-section app">
                <div id="app" class="c-app aira">
                    @RenderBody()
                </div>
            </section>
        </div> <!-- .content-wrapper -->
    </div> <!-- .page-wrapper -->

    <script src="~/connection/js/htmx.min.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("scripts", required: false)
    <script type="module" src="@baseUrl/_content/Kentico.Xperience.Aira/js/index.js"></script>
    <vc:custom-scripts head="false" />
</body>
</html>
